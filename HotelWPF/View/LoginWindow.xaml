<Window x:Class="HotelWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelWPF"
        mc:Ignorable="d"
        Title="Login" Height="292" Width="373">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Username:" FontSize="20"/>
            <TextBox x:Name="txtUsername" FontSize="20"/>
            <TextBlock Text="Password:" Margin="0,10,0,0" FontSize="20"/>
            <PasswordBox x:Name="txtPassword" FontSize="20"/>
            <Button Style="{StaticResource PrimaryButton}" Content="Login" Margin="0,20,0,0" Click="Login_Click" Width="150" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
